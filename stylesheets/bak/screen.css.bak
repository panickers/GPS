

* {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

body {
	background-color: #e5e5e5;
	font-family: ‘Trebuchet MS’,Helvetica,sans-serif;
	font-style: normal;
	font-weight: normal;
	color: #636363;
}

h1,h2,h3,h4 {
	font-weight: normal;
	font-family: ‘Trebuchet MS’,Helvetica,sans-serif;
	font-style: normal;
	font-weight: normal;
}

a {
	text-decoration: none;
}
a:link {
	color: #636363;
}
a:visited {
	color: #636363; /*#a91e22; TODO: fix me.*/
}

li {
	list-style: none;
}

.wrapper {
	width: 80%;
	position: relative;
	margin: auto;
	background-color: white;
}

.cf:before,
.cf:after {
    content: " "; /* 1 */
    display: table; /* 2 */
}
.cf:after {
    clear: both;
}

.topBar {
	border-bottom: 6px solid #636363;
	/*#969595; */
	/*#202020;*/
}

header {
	padding: 2px;
	border-bottom: 1px solid #c2c2c2;
	margin-left: 30px;
	margin-right: 30px;
}

.logo {
	width: 25%;
	float: left;
	padding: 4px;
}

header nav {
	width: 75%;
	float: right;
}

.topnav {
	list-style: none;
	float: right; 
	margin-top: 20px;
}

.topnav li {
	float: left;
}

.topnav li a {
	display: block;
	padding: 8px 15px;
	text-decoration: none;
	color: #636363;
	/*font-weight: bold;
	font-stretch: condensed;*/
	/*font-size: 15px;*/
}

.mainpanel {
	/*width: 80%;*/
	background-color: white;
	padding: 20px;
}

.slideshow {
	padding: 1em;
}
.slideshow img {
	width: 100%;
	/*background: transparent;*/
 	/*border-width: 5px solid #fff;*/
	box-shadow: 0 1px 5px rgba(0,0,0,.2);
}

.introduction {
	padding: 1em;
	text-align: center;
	color: #636363;
}

.footer {
	color: #969595;
	background-color: #464646;
	padding: 20px 30px;
	border-top: 3px solid #00aeef;

}

.footerBlocks {
	max-width: 100%;
	margin: 0 auto;
}

.aboutUs,.testimonials,.contactUs {
	width: 30.66%;
	position: relative;
}

.aboutUs,.testimonials {
	float: left;
	margin-right: 4%;
}  
.contactUs {
	float: right;
	display: inline-block;
}

.phone li {
	display: block;
}

.email li {
	display: block;
	text-decoration: none;
}
